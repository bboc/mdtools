% macros for TODOs and LATER
\newcommand{\todo}[1]{\textbf{\underline{TODO: {#1}}}\linebreak}
\newcommand{\later}[1]{\textbf{LATER:} {#1}\linebreak}

\setlength{\emergencystretch}{2em} % this remedies a few overfull/underfull hbox warnings

% use fancyhdr for footer
\usepackage{fancyhdr}
\fancypagestyle{plain}{%
	\fancyhf{} % clear all header and footer fields
	\fancyfoot[C]{\bfseries \thepage} % except the center
	\renewcommand{\headrulewidth}{0pt}
	\renewcommand{\footrulewidth}{0pt}
}
\pagestyle{plain}

% define custom date and time formats for document version
%\usepackage{ngerman}
%\usepackage[ngerman]{datetime}
\usepackage{datetime}
\newdateformat{dver}{\twodigit{\THEYEAR}.\twodigit{\THEMONTH}\twodigit{\THEDAY}}
\newtimeformat{tver}{\twodigit{\THEHOUR}\twodigit{\THEMINUTE}} 

% source name and version in left footer 
\lfoot{\fontsize{5}{5}\selectfont \jobname.\dver\today.\tver}
% pagenumber in right footer
\rfoot{\fontsize{8}{8}\selectfont \thepage}

% remove page number from center footer
\cfoot[]{}
